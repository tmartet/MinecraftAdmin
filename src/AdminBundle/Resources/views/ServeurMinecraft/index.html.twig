{% extends '@Admin/Default/index.html.twig' %}
 {% block titrecontenu %}
     Serveur Minecraft
 {% endblock %}

{% block contenu %}
    <div id="chargementModal" class=" modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    {#<button type="button" class="close" data-dismiss="modal">&times;</button>#}
                    <h4 class="modal-title">Chargement</h4>
                </div>
                <div class="modal-body">
                    <div class="" id="messageChargement"></div>
                    <div class="progress">
                        <div id="progressChargement" class="progress-bar progress-bar-striped active" role="progressbar"
                             aria-valuenow="70"
                             aria-valuemin="0" aria-valuemax="100" style="width:70%">
                            <span id="etapeChargement" class="sr-only">70% Complete</span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    {#<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>#}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="pull-right">
                <div class="btn btn-success" id="btnStartServeur">
                    <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                    Démarrer le serveur
                </div>
                <div class="btn btn-warning" id="btnRestartServeur">
                    <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                    Redémarrer le serveur
                </div>
                <div class="btn btn-danger" id="btnStopServeur">
                    <span class="glyphicon glyphicon-ban-circle" aria-hidden="true"></span>
                    Arreter le serveur
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2>Statu du serveur</h2>
        </div>
        <div class="col-md-3">
            <canvas id="joueurChart" width="200" height="200"></canvas>
            <div id="" class="text-center">
                <strong>Nombre de jouer connecté</strong>
            </div>

        </div>
        <div class="col-md-3">
            <canvas id="memoireChart" width="200" height="200"></canvas>
            <div id="" class="text-center">
                <strong>Mémoire</strong>
            </div>
        </div>
        <div class="col-md-3">
            <canvas id="mapChart" width="200" height="200"></canvas>
            <div id="" class="text-center">
                <strong>Taille de la carte</strong>
            </div>
        </div>
        <div class="col-md-3">
            <div id="" class="text-center">
                <strong>Autre informations</strong>
            </div>
            <table class="table table-bordered table-striped">
                <tbody>
                <tr>
                    <th>Statu</th>
                    <td>Arreter</td>
                </tr>
                <tr>
                    <th>Version</th>
                    <td>1.7.1</td>
                </tr>
                <tr>
                    <th>Up Time</th>
                    <td></td>
                </tr>
                <tr>
                    <th>Date du dernier démarrage</th>
                    <td>11/11/2017</td>
                </tr>
                <tr>
                    <th>Dernière sauvegarde</th>
                    <td>11/11/2017 11:11</td>
                </tr>
                <tr>
                    <th>Configuration</th>
                    <td>Cfg-2017-11-11</td>
                </tr>
                <tr>
                    <th>Latence</th>
                    <td>15ms</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2>Liste des joueurs</h2>
        </div>
        <div class="col-md-12">
            <table class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Connecté</th>
                    <th>Date d'inscripsion</th>
                    <th>Date de dernière connexion</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                <td>tatamot</td>
                <td>Hors ligne</td>
                <td>11/11/2017</td>
                <td>11/11/2017</td>
                <td>
                    <div class="btn btn-warning">
                        <span class="glyphicon glyphicon-ban-circle" aria-hidden="true"></span>
                        Bannir le joureur
                    </div>
                    <div class="btn btn-danger">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        Supprimer le joueur
                    </div>
                </td>
                </tbody>
            </table>
        </div>

    </div>
    <div class="row">
        <div class="col-md-12">
            <h2> Map</h2>
        </div>
        <div class="col-md-6">
            <select class="form-control">
                <option></option>
                <option>Import-2017-11-11</option>
                <option>Backup-2017-11-11</option>
            </select>

        </div>
        <div class="col-md-3">
            <div class="btn btn-primary">
                <span class="glyphicon glyphicon-import" aria-hidden="true"></span>
                Restaurer
            </div>
            <div class="btn btn-primary">
                <span class="glyphicon glyphicon-export" aria-hidden="true"></span>
                Exporter
            </div>
        </div>
        <div class="col-md-3">
            <div class="pull-rigth">
                <div class="btn btn-primary">
                    <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>
                    Sauvegarder
                </div>
                <div class="btn btn-primary">
                    <span class="glyphicon glyphicon-floppy-open" aria-hidden="true"></span>
                    Importer
                </div>
            </div>

        </div>

    </div>
    <div class="row">
        <div class="col-md-12">
            <h2>Configuration</h2>
        </div>
        <div class="col-md-6">
            <select class="form-control">
                <option></option>
                <option>Cfg-2017-11-11</option>
            </select>
        </div>
        <div class="col-md-3">
            <div class="pull-rigth">
                <div class="btn btn-primary">
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                    Editer
                </div>
                <div class="btn btn-primary">
                    <span class="glyphicon glyphicon-import" aria-hidden="true"></span>
                    Charger
                </div>
                <div class="btn btn-primary">
                    <span class="glyphicon glyphicon-export" aria-hidden="true"></span>
                    Exporter
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="btn btn-primary">
                <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>
                Sauvegarder
            </div>
            <div class="btn btn-primary">
                <span class="glyphicon glyphicon-floppy-open" aria-hidden="true"></span>
                Importer
            </div>

        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {% javascripts
    'js/jquery.min.js'
    'js/jquery-ui.min.js'
    'js/bootstrap.js'
    'js/adminlte.js'
    'js/chart.js'
    'js/bootbox.js'
    'bundles/admin/js/mqtt-client.js'
    'bundles/admin/js/ServeurMinecraft.js'
    'bundles/admin/js/Chargement.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}